# Usa la imagen oficial de Go
FROM golang:1.23.5 AS builder

# Setea el directorio de trabajo en el contenedor
WORKDIR /app

# Copia los archivos de configuraci贸n
COPY go.mod go.sum ./
RUN go mod download

# Copia todo el c贸digo fuente
COPY . .

#  Construye la aplicaci贸n desde `cmd/`
RUN GOOS=linux GOARCH=amd64 go build -o main ./cmd

# Segunda etapa: Imagen m谩s ligera para producci贸n
FROM alpine:latest

# Instala certificados ra铆z
RUN apk --no-cache add ca-certificates libc6-compat

WORKDIR /root/

# Copia el binario desde la etapa anterior
COPY --from=builder /app/main .

# Exponer el puerto
EXPOSE 8080

# Definir variable de entorno (sobreescribible)
ENV JWT_SECRET="default-secret"

RUN chmod +x /root/main

# Comando de inicio
CMD ["./main"]